<%- include("partials/header") %>

<h1>Compose</h1>
<!-- <div class="form-horizontal"> -->
<form action="/compose" method="POST">

    <!-- <div class="col-12"> -->
    <div class="form-group">
        <label for="formTitle">Post Title</label>
        <input type="text" class="form-control" name="formTitle" placeholder="Enter your post title here"></input>
    </div>
    <div class="form-group">
        <label for="formText">Post Content</label>
        <textarea class="form-control" rows="4" type="text" name="formText"
            placeholder="Enter your post content here"></textarea>
    </div>
    <button class="btn btn-primary" id="publishButton" type="submit">Publish</button>
</form>
</div>

